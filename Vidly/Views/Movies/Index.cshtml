@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<button type="button" onclick="location.href='@Url.Action("CreateRecord", "Movies")'">Create New Record</button>

@if (!Model.Any())
{
    <p>We don't have any movies in stock.</p>

}
else
{
    <table>
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td> @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
            </tr>
            }

        </tbody>
    </table>
}

